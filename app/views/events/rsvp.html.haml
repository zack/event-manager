%p
  %strong Date:
  = @event.datetime.strftime("%A, %B #{@event.datetime.day.ordinalize}")

%p
  %strong Time:
  = @event.datetime.strftime('%l:%M %p')

%p
  %strong Description:
  = @event.description

%p
  %strong Guests:
  = "#{@rsvp_count || 0} Confirmed"

%p
  = form_tag(submit_event_rsvp_path) do |f|
    %strong RSVP:
    = select_tag 'RSVP', options_for_select(@options_for_select), :include_blank => true
    = hidden_field(:user, :uuid, :value => @user.uuid)
    = submit_tag "Submit"
