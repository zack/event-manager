%p
  = link_to 'New Event', { controller: 'events', action: 'new' }

- if @upcoming_events
  %h2 Upcoming Events
  = render partial: 'event_table', locals: { events: @upcoming_events, editable: true }

- if @past_events
  %h2 Past Events
  = render partial: 'event_table', locals: { events: @past_events, editable: false }

