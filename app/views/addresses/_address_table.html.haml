%table.addresses
  %thead
    %tr
      %th Address
      %th Special Instructions
      %th Edit

  %tbody
    - @addresses.each do |e|
      %tr
        %td
          = e.formatted_full_one_line
        %td
          = e.special_instructions
        %td.center
          = link_to 'Edit', { controller: 'addresses', action: 'edit', id: e.id }
