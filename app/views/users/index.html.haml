= render partial: 'admin_toolbar'

%h2 All Users

%table
  %thead
    %tr
      %th First Name
      %th Last Name
      %th Email Address
      %th #{"\u2709".encode('utf-8')}
      %th #{"\u2611".encode('utf-8')}

  %tbody
    - @users.each do |user|
      %tr{class: !user.admin_confirmed ? 'not-admin' : !user.email_confirmed ? 'not-email' : ''}
        %td.first-name
          = link_to user.first_name, { controller: 'users', action: 'admin', uuid: user.uuid }
        %td.last-name
          = user.last_name
        %td
          = user.email_address
        %td.center
          = bool_to_unicode(user.email_confirmed)
        %td.center
          = bool_to_unicode(user.admin_confirmed)
